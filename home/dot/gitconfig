    name = Gary Verhaegen
[color]
    status = auto
    branch = auto
    diff = auto
[core]
    excludesfile = ~/.gitexclude
    editor = vim
    eol = native
[merge]
    tool = vimdiff
    conflictstyle = diff3
    summary = true
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
    ht = log -n1 --date=format-local:%Y%m%d-%H%M --format=format:%cd-%h --abbrev=6
    ca = commit --amend --reset-author --no-edit
    pf = push --force-with-lease
[push]
    default = current
    autoSetupRemote = true
[rebase]
    autoSquash = true
[fetch]
    prune = true
[rerere]
    enabled = true
[pull]
    ff = only
    default = current
[init]
    defaultBranch = main
[diff]
    colorMoved = zebra
    colorMovedWS = allow-indentation-change
[log]
    date = iso
